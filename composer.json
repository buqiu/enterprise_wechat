{
  "name": "buqiu/enterprise_wechat",
  "type": "library",
  "description": "official lib of enterprise wechat api https://work.weixin.qq.com/api/doc",
  "license": "MIT",
  "authors": [
    {
      "name": "eva",
      "email": "sh_xll@foxmail.com"
    }
  ],
  "require": {
    "laravel/framework": "^10.0",
    "guzzlehttp/guzzle": "^7.9",
    "php": "^8.1",
    "ext-openssl": "*",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-dom": "*",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4|^10.1",
    "laravel/pint": "^1.17"
  },
  "autoload": {
    "psr-4": {
      "Buqiu\\EnterpriseWechat\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Buqiu\\EnterpriseWechat\\Test\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Buqiu\\EnterpriseWechat\\Providers\\EnterpriseWechatProvider"
      ]
    }
  }
}
